<h1>Edit post</h1>
<form action="/admin/posts/edit/{{posts.id}}?_method=PATCH" method="post" enctype="multipart/form-data" >

<div class="form-group">
<label for="title">Title</label>
<input type="text" class="form-control" name="title" id="title" value="{{posts.title}}"required>
</div>
<div class="form-group">
<label for="author">Author</label>
<input type="text" class="form-control" name="author" id="title" value="{{posts.author}}" required>
</div>
<div class="form-group">
<label for="file">File Upload</label>
<input type="file" class="form-control" name="file" id="file" value="{{post.imageref}}" required>
</div>
<div class="form-group">
<label for="status">status</label>
<select name="status" id="status" class="form-control" value="{{posts.status}}" >
    {{#select posts.status}}
    <option value="public">public</option>
    <option value="private">private</option>
    <option value="Draft">Draft</option>
    {{/select}}
</select>
</div>

<div class="form-group">
    <label for="allowcomments" class="form-check-label">
    <input type="checkbox" name="allowcomments" {{#if posts.allowComment}} checked='checked' {{/if}}id="allowcomments" class="form-check-input"  >
    Allowcomments</label>
</div>
<div class="form-group">
<label for="Categories">Categories</label>
<select name="categories" id="categories" class="form-control"  >
    {{#select posts.category}}
    {{#each cate}}
    <option value="{{id}}">{{name}}</option>
   {{/each}}
   {{/select}}
</select>
</div>
<div class="form-group">
    <label for="description">Description</label>
<input type="text" name="description" id="description" placeholder="Enter your description....." class="form-control" value="{{post.description}}" required>
</div>
<div class="form-group">
    <label for="body">Body</label>
<textarea name="body" id="body" placeholder="Enter your body....." class="form-control" required >{{posts.body}}</textarea>
</div>
<button type="submit" class="btn btn-primary">Save</button>
</form>